<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました<br>
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <h2>User info</h2>
      <%= form_with model:@user,local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName",placeholder:"名前",class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label><br>
          <%#= attachment_image_tag @user, :profile_image, size:'150x150', fallback: "no_image.jpg"%><br>
          <%= f.attachment_field :profile_image,class:"form-control-file user_image" %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputName",placeholder:"自己紹介",class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User",class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>