<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book,url:"/books/#{@book.id}",local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title,class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label><br>
        <%= f.text_area :body,class:"form-control" %>
      </div>
      <div class="form-group">
         <%= f.submit "Update Book",class:"btn btn-success" %>
      </div>
      <% end %>
      <a class="show"><%= link_to "show",book_path(@book.id) %></a>
      <a class="back"><%= link_to "Back",book_path(@book.id) %></a>
    </div>
  </div>
</div>