<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: @user %>
      <div class="row">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path" href="/users/path/edit"></a>
      </div>
      <%= render "books/new" %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>画像</th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>画像<br><%= link_to @book.user.name, user_path(@book.user.id) %></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "edit",edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy",book_path(@book.id),method: :delete,"data-confirm"=>"本当に削除しますか？" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>